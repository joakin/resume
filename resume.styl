@import "nib"
@import "stylus-normalize/normalize"

text-color = #333
light-text-color = #aaa
light-bg = #ddd

full-width-table(layout=auto)
  width 100%
  display table
  table-layout layout
  >*
    display table-cell
    vertical-align middle



*, *:before, *:after
  box-sizing inherit


html, body
  margin 0
  padding 0
  box-sizing border-box
  font-size 20px
  @media print
    font-size 16px

ul
  list-style-position inside

body
  color text-color
  font-family 'Source Sans Pro', sans-serif

h1, h2, h3, h4, h5, h6
  font-family 'Playfair Display', serif
  margin 0

body>header
  background-color light-bg
  color white
  text-align center
  a
    display inline-block
    padding 10px 10px

  @media print
    display none

.kv
  full-width-table fixed
  >*
    padding 4px 10%
  :first-child
    text-align right
    color light-text-color
    padding-right 10px
  :last-child
    width 66%
    padding-left 10px

#container
  max-width 100ex
  @media print
    max-width none
  padding 0 20px
  margin 0 auto

  >header
    full-width-table auto
    margin 20px 0
    img.photo
      width 100px
      border-radius 50px

section
  margin-bottom 40px
  >header
    background-color light-bg
    padding 10px 10px
    margin-bottom 10px
    >*
      margin 0
  >article
    border-top 1px solid light-bg
    padding-top 10px
    margin-bottom 10px

.work-experience
  article
    header
      display flex
      margin-bottom 10px
      .employer,.date
        padding 10px 20px
        border 1px solid light-bg
      .employer
        // border-radius 15px 0 0 15px
        background-color light-bg
        font-weight bold
      .date
        flex 1
        // border-radius 0 15px 15px 0






footer
  font-size 0.8rem
  padding 10px 10%
  background-color light-bg


#excerpt
  display none

  & ~ *
    font-size 0.8em

