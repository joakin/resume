
extends ./layout.jade

block content
  header.main
    h1= fullName
    img.photo(src=photo)

  section.personal-information
    header: h2 Personal information
    article

      .full-name= fullName
      .phone= phone
      .email= email
      .nationality= nationality

      - var date = (new Date()).getFullYear() - 1985
      .age= date


  section.current-situation
    header: h2 Current situation
    article
      h3 Occupational field
      .value= field

    article!= md(intro)

  section.work-experience
    header: h2 Work experience
    - work.forEach(function(job) {
      article
        .employer= job.employer
        .date= job.when
        .position= job.position
        .activities!= md(job.what)
    - });

  section.education
    header: h2 Education
    .date= edu.when
    .title= edu.what
    .from= edu.who

  section.skills
    header: h2 Skills
    article.languages
      header: h3 Languages
      ul
      - skills.languages.forEach(function(lang) {
        li
          .name= lang.which
          .level= lang.level
          - if (lang.titles)
            ul.titles
              - lang.titles.forEach(function(title) {
                li= title
              - });
      - });

    article.tech
      header: h3 Technical skills
      ul
      - skills.tech.forEach(function(skill) {
        li
          .name= skill.text
          - if (skill.children)
            ul
            - skill.children.forEach(function(subSkill) {
              li: .name= subSkill
            - });
      - });

    article.art
      header: h3 Artistic skills
      ul
      - skills.art.forEach(function(skill) {
        li: .name= skill
      - })

  section.other
    header: h2 Additional information
    .car= other.car
    .remote= other.remote
    ul.trips
      - other.trips.forEach(function(trip) {
        li= trip
      - });

